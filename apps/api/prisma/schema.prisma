generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Test {
  id Int @id @default(autoincrement())
}

enum JobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  WAITING_FOR_USER
}

enum AgentType {
  CLAUDE_SDK
  LANGGRAPH
}

model AgentJob {
  id        Int       @id @default(autoincrement())
  type      AgentType @default(LANGGRAPH)
  prompt    String
  assignee  String?
  status    JobStatus @default(PENDING)
  logs      AgentJobLog[]
  artifacts AgentJobArtifact[]
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
}

model AgentJobLog {
  id        Int      @id @default(autoincrement())
  jobId     Int
  job       AgentJob @relation(fields: [jobId], references: [id])
  message   String
  timestamp DateTime @default(now())
}

model AgentJobArtifact {
  id        Int      @id @default(autoincrement())
  jobId     Int
  job       AgentJob @relation(fields: [jobId], references: [id])
  filename  String
  content   String
  createdAt DateTime @default(now())
}
