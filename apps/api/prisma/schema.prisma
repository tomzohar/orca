generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Test {
  id Int @id @default(autoincrement())
}

enum JobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  WAITING_FOR_USER
}

enum AgentType {
  DOCKER
  FILE_SYSTEM
}

enum UserType {
  HUMAN
  AGENT
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  avatar       String?
  type         UserType @default(HUMAN)
  systemPrompt String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  ownedProjects Project[]   @relation("ProjectOwner")
  createdJobs   AgentJob[]  @relation("CreatedJobs")
  assignedJobs  AgentJob[]  @relation("AssignedJobs")
}

model AgentJob {
  id        Int       @id @default(autoincrement())
  type      AgentType @default(FILE_SYSTEM)
  prompt    String
  status    JobStatus @default(PENDING)

  projectId Int?
  project   Project?  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdById     Int
  createdBy       User  @relation("CreatedJobs", fields: [createdById], references: [id])

  assignedAgentId Int?
  assignedAgent   User? @relation("AssignedJobs", fields: [assignedAgentId], references: [id])

  logs      AgentJobLog[]
  artifacts AgentJobArtifact[]
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
}

model Project {
  id          Int        @id @default(autoincrement())
  name        String
  slug        String     @unique
  rootPath    String
  description String?
  includes    String[]   @default(["**/*"])
  excludes    String[]   @default(["**/node_modules/**", "**/.git/**"])

  ownerId Int
  owner   User @relation("ProjectOwner", fields: [ownerId], references: [id], onDelete: Cascade)

  jobs        AgentJob[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model AgentJobLog {
  id        Int      @id @default(autoincrement())
  jobId     Int
  job       AgentJob @relation(fields: [jobId], references: [id], onDelete: Cascade)
  message   String
  timestamp DateTime @default(now())
}

model AgentJobArtifact {
  id        Int      @id @default(autoincrement())
  jobId     Int
  job       AgentJob @relation(fields: [jobId], references: [id], onDelete: Cascade)
  filename  String
  content   String
  createdAt DateTime @default(now())
}
