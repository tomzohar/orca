generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Test {
  id Int @id @default(autoincrement())
}

enum JobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  WAITING_FOR_USER
}

enum AgentType {
  DOCKER
  FILE_SYSTEM
}

enum UserType {
  HUMAN
  AGENT
}

enum TaskType {
  ORCHESTRATOR
  CODING
  REVIEW
}

enum MergeStatus {
  PENDING
  READY
  CONFLICT
  MERGED
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  avatar       String?
  type         UserType @default(HUMAN)
  systemPrompt String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  ownedProjects       Project[]              @relation("ProjectOwner")
  createdJobs         AgentJob[]             @relation("CreatedJobs")
  assignedJobs        AgentJob[]             @relation("AssignedJobs")
  agentConfigurations AgentConfiguration[]   @relation("UserConfigurations")
  comments            AgentJobComment[]      @relation("AuthoredComments")
}

model AgentJob {
  id        Int       @id @default(autoincrement())
  type      AgentType @default(FILE_SYSTEM)
  prompt    String
  status    JobStatus @default(PENDING)

  projectId Int?
  project   Project?  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdById     Int
  createdBy       User  @relation("CreatedJobs", fields: [createdById], references: [id])

  assignedAgentId Int?
  assignedAgent   User? @relation("AssignedJobs", fields: [assignedAgentId], references: [id])

  // Job hierarchy for orchestration
  parentJobId Int?
  parentJob   AgentJob?  @relation("JobHierarchy", fields: [parentJobId], references: [id], onDelete: Cascade)
  childJobs   AgentJob[] @relation("JobHierarchy")

  // Git isolation (branch created by Docker agents)
  gitBranch String?

  // Task classification
  taskType    TaskType     @default(CODING)
  mergeStatus MergeStatus  @default(PENDING)

  logs      AgentJobLog[]
  artifacts AgentJobArtifact[]
  comments  AgentJobComment[]
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
}

model AgentConfiguration {
  id          Int       @id @default(autoincrement())
  name        String
  slug        String    @unique
  description String?

  // Core configuration
  systemPrompt String   @db.Text
  rules        String?  @db.Text
  skills       String[] @default([])

  // Execution settings
  agentType    AgentType

  // Project association
  projectId    Int
  project      Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // User association (creator)
  userId       Int
  user         User      @relation("UserConfigurations", fields: [userId], references: [id], onDelete: Cascade)

  // Lifecycle
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Project {
  id          Int        @id @default(autoincrement())
  name        String
  slug        String     @unique
  rootPath    String
  description String?
  includes    String[]   @default(["**/*"])
  excludes    String[]   @default(["**/node_modules/**", "**/.git/**"])

  ownerId Int
  owner   User @relation("ProjectOwner", fields: [ownerId], references: [id], onDelete: Cascade)

  jobs           AgentJob[]
  configurations AgentConfiguration[]
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

model AgentJobLog {
  id        Int      @id @default(autoincrement())
  jobId     Int
  job       AgentJob @relation(fields: [jobId], references: [id], onDelete: Cascade)
  message   String
  timestamp DateTime @default(now())
}

model AgentJobArtifact {
  id        Int      @id @default(autoincrement())
  jobId     Int
  job       AgentJob @relation(fields: [jobId], references: [id], onDelete: Cascade)
  filename  String
  content   String
  createdAt DateTime @default(now())
}

model AgentJobComment {
  id        Int      @id @default(autoincrement())
  jobId     Int
  job       AgentJob @relation(fields: [jobId], references: [id], onDelete: Cascade)
  authorId  Int
  author    User     @relation("AuthoredComments", fields: [authorId], references: [id])
  content   String   @db.Text
  metadata  Json?
  createdAt DateTime @default(now())
}
