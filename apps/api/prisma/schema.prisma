generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Test {
  id Int @id @default(autoincrement())
}

enum JobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

model AgentJob {
  id        Int       @id @default(autoincrement())
  prompt    String
  assignee  String?
  status    JobStatus @default(PENDING)
  logs      Json[]    @default([])
  artifacts Json[]    @default([])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
