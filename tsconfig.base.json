{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@orca/design-system": ["libs/design-system/src/index.ts"],
      "@orca/core/layout": ["libs/core/layout/src/index.ts"],
      "@orca/orchestration-data": ["libs/orchestration/data/src/index.ts"],
      "@orca/orchestration-feature": [
        "libs/orchestration/feature/src/index.ts"
      ],
      "@orca/orchestration-ui": ["libs/orchestration/ui/src/index.ts"],
      "@orca/orchestration-types": ["libs/orchestration/types/src/index.ts"],
      "@orca/core/projects": ["libs/core/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
